{
  "manifest_version": 3,
  "name": "MemWyre Extension",
  "version": "1.0",
  "description": "Inject your MemWyre memory into any LLM.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Wyre"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "http://localhost:5173/*",
        "https://*.memwyre.com/*"
      ],
      "js": [
        "auth_relay.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*",
      "http://localhost:8000/*",
      "https://*.memwyre.com/*"
    ]
  }
}