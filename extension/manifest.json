{
  "manifest_version": 3,
  "name": "MemWyre",
  "version": "1.0",
  "description": "Connect your second brain to your browser. Capture content and inject memory into any AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open MemWyre",
    "default_icon": "logo.png"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "content.js"
      ]
    },
    {
      "matches": [
        "http://localhost:5173/*",
        "https://*.memwyre.com/*"
      ],
      "js": [
        "auth_relay.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*",
      "http://localhost:8000/*",
      "https://*.memwyre.com/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "logo.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}